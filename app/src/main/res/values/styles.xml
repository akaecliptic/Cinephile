<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textViewStyle">@style/TextFont</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="MyCheckboxStyle" parent="AppTheme">
        <item name="android:button">@drawable/button_checkbox</item>
        <item name="android:background">@color/colorSecondaryDark</item>
    </style>

    <style name="MyCheckboxSeen" parent="AppTheme">
        <item name="android:button">@drawable/ic_seen</item>
        <item name="android:buttonTint">@drawable/tint_menu</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="MyToolBar" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextFont" parent="android:Widget.TextView">
        <item name="fontFamily">@font/cousine</item>
    </style>

    <style name="MyRecyclerItems" parent="AppTheme">
        <item name="android:background">@color/colorSecondaryDark</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyDialogButtons" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
