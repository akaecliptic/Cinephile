<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rci_movie_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:theme="@style/MyRecyclerItems">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/rci_movie_card_img_poster"
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_80sdp"
            android:contentDescription="@string/content_description_movie_poster"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rci_movie_card_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="1dp"
            android:background="@android:color/transparent"

            android:ellipsize="marquee"

            android:singleLine="true"
            android:text="@string/placeholder_movie_title"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rci_movie_card_tv_year"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"

        android:background="@android:color/transparent"
        android:elevation="5dp"

        android:shadowColor="@color/colorPrimaryDark"
        android:shadowRadius="15"

        android:text="@string/placeholder_year_vert"
        android:textAlignment="textStart" />
</RelativeLayout>

