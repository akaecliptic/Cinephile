<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_collection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_5sdp"
    android:paddingHorizontal="@dimen/_5sdp">

    <TextView
        android:id="@+id/list_collection_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/list_collection_image_check"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="@string/placeholder"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/list_collection_image_check"
        android:contentDescription="@string/description_added_to_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_check" />

</RelativeLayout>